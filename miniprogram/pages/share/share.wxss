/* pages/share/share.wxss */
.container {
  padding: 32rpx;
}

.section-title {
  text-align: center;
  margin-bottom: 48rpx;
}

.section-heading {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 12rpx;
}

.section-subheading {
  color: #8E8E93;
  font-size: 28rpx;
  display: block;
}

.platform-selector {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.platform-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 32rpx;
  background: white;
  border-radius: 24rpx;
  border: 2rpx solid #C6C6C8;
  transition: all 0.3s ease;
}

.platform-btn.active {
  border-color: transparent;
}

.platform-name {
  font-size: 24rpx;
  font-weight: 500;
}

.share-preview {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
}

.preview-image {
  width: 400rpx;
  height: 400rpx;
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.preview-image image {
  width: 100%;
  height: 100%;
}

.preview-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  text-align: center;
}

.preview-info {
  display: flex;
  gap: 32rpx;
  font-size: 28rpx;
}

.preview-rate {
  color: #34C759;
  font-weight: 600;
}

.preview-points {
  color: #FF9500;
  font-weight: 600;
}

.action-buttons {
  display: flex;
  gap: 24rpx;
  justify-content: center;
}

.btn {
  padding: 24rpx 48rpx;
  border-radius: 24rpx;
  font-weight: 600;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.btn-primary {
  background: #007AFF;
  color: white;
}

.btn-secondary {
  background: #8E8E93;
  color: white;
}
