/* pages/points/points.wxss */
.container {
  padding: 32rpx;
}

.section-title {
  text-align: center;
  margin-bottom: 48rpx;
}

.section-heading {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 12rpx;
}

.section-subheading {
  color: #8E8E93;
  font-size: 28rpx;
  display: block;
}

.points-card,
.history-card {
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 32rpx;
  overflow: hidden;
}

.card-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #C6C6C8;
  font-weight: 600;
  font-size: 32rpx;
}

.card-body {
  padding: 32rpx;
}

.points-display {
  text-align: center;
  margin-bottom: 48rpx;
}

.points-value {
  font-size: 80rpx;
  font-weight: 700;
  color: #007AFF;
  display: block;
  margin-bottom: 8rpx;
}

.points-label {
  color: #8E8E93;
  font-size: 28rpx;
  display: block;
}

.points-rules {
  margin-top: 32rpx;
}

.rules-title {
  font-size: 32rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 24rpx;
}

.rule-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.history-list {
  min-height: 200rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #C6C6C8;
}

.history-item:last-child {
  border-bottom: none;
}

.history-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.history-merchant {
  font-weight: 600;
  font-size: 28rpx;
}

.history-date {
  color: #8E8E93;
  font-size: 24rpx;
}

.history-points {
  color: #34C759;
  font-weight: 600;
  font-size: 28rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 64rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 32rpx;
  color: #8E8E93;
  font-weight: 600;
}

.empty-subtext {
  font-size: 28rpx;
  color: #8E8E93;
}
